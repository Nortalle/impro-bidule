// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Show {
  id          String   @id @default(uuid())
  src         String
  title       String
  date        DateTime
  description String
  location    String
  places      Int
  price       Decimal

  @@map("shows")
}
